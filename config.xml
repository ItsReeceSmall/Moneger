<?xml version='1.0' encoding='utf-8'?>
<widget id="com.reecesmall.moneger" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Moneger</name>
    <description>
        A simple to use money management app which displays remaining monthly funds after specifying spendings and remaining earnings.
    </description>
    <author email="reecesmall97@gmail.com" href="http://youtube.com/itsreecesmall">
        Reece Small
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="www/img/logo.png" />
        <splash src="res/screen/android/ss_hdpi.png" density="port-hdpi"/>
        <splash src="res/screen/android/ss_xhdpi.png" density="port-xhdpi"/>
        <splash src="res/screen/android/ss_xxhdpi.png" density="port-xxhdpi"/>
        <splash src="res/screen/android/ss_xxxhdpi.png" density="port-xxxhdpi"/>
        <preference name="FadeSplashScreen" value="false"/>
        <preference name="SplashMaintainAspectRatio" value="true" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.1.1" />
</widget>
