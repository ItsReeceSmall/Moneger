<?xml version='1.0' encoding='utf-8'?>
<widget id="com.reecesmall.monager" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <allow-intent href="market:*" />
    <icon src="www/img/logo.png" />
    <splash density="port-hdpi" src="res/screen/android/ss_hdpi.png" />
    <splash density="port-xhdpi" src="res/screen/android/ss_xhdpi.png" />
    <splash density="port-xxhdpi" src="res/screen/android/ss_xxhdpi.png" />
    <splash density="port-xxxhdpi" src="res/screen/android/ss_xxxhdpi.png" />
    <preference name="FadeSplashScreen" value="false" />
    <name>Moneger</name>
    <description>
        A simple to use money management app which displays remaining monthly funds after specifying spendings and remaining earnings.
    </description>
    <author email="reecesmall97@gmail.com" href="http://youtube.com/itsreecesmall">
        Reece Small
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
